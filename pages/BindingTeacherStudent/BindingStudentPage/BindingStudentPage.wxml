  <scroll-view class="studentlist" scroll-y="true" scroll-top="{{top}}">
    <view class="item" wx:for="{{studentlist}}" wx:key="index">
      <checkbox-group bindchange="checkboxChange" id="{{item.StudentId}}">
        <checkbox value="{{item.StudentId}}" checked="{{check}}" />
      </checkbox-group>
      <view class="id">{{item.StudentId}}</view>
      <view class="name">{{item.Name}}</view>
      <view class="profession">{{item.ProfessionalClass}}</view>
    </view>
  </scroll-view>
  <view class="buttons1" hidden="{{Binding}}">
    <button class="Binding" bindtap="Binding">绑 定</button>
    <button class="Return1" bindtap="Return1">返 回</button>
  </view>
  <view class="buttons2" hidden="{{Delete}}">
    <button class="Delete" bindtap="Delete">删 除</button>
    <button class="Return2" bindtap="Return2">返 回</button>
  </view>
  


