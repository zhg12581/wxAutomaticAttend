<view class="container">
  <view class="tip">管理教师{{teachername}}的学生</view>
  <view class="choosefunction">
    <view class="bingstudenttip" bindtap="bindingstudent" style="color:{{bindingstudentcolor}}">绑定学生</view>
    <view class="deleteteachertip" bindtap="deletestudent" style="color:{{deletestudentcolor}}">删除学生</view>
  </view>
  <view class="tr">
    <view class="choose">选择</view>
    <view class="th">学号</view>
    <view class="th">姓名</view>
    <view class="th">专业班级</view>
  </view>
