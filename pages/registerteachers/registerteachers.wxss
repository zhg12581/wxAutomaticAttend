page {
  background: #eee;
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.nickname {
  color: #aaa;
}

.registerteachertip {
  color: rgba(62, 76, 80, 0.726);
  font-size: 20px;
  font-weight: 550;
}

.teacherid {
  font-size: 18px;
  width: 230px;
  height: 35px;
  border: solid 1px rgba(62, 76, 80, 0.726);
}

.teachername {
   font-size: 18px;
  width: 230px;
  height: 35px;
  border: solid 1px rgba(62, 76, 80, 0.726);
}

.subject {
   font-size: 18px;
  width: 230px;
  height: 35px;
  border: solid 1px rgba(62, 76, 80, 0.726);
}

.registerteachersubmit {
  top:80%;
  position: absolute;
  font-size: 17px;
  width: 150px;
  height: 40px;
  border: solid 1px rgba(62, 76, 80, 0.726);
}

.registerteacherreturn{
  top:90%;
  position: absolute;
  font-size: 17px;
  width: 150px;
  height: 40px;
  border: solid 1px rgba(62, 76, 80, 0.726);
}

